<body class="login-body">
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign In</h5>

              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
                  <div class="form-label-group">
                    <%= f.input :login, autofocus: true, autocomplete: "off", class: "form-control" %>
                  </div>
                  <div class="form-label-group">
                    <%= f.input :password, autocomplete: "off", class: "form-control" %>
                  </div>
                  <div style="display:none;" class="custom-control custom-checkbox mb-3">
                    <%= f.input :remember_me, class: "custom-control-input", as: :boolean if devise_mapping.rememberable? %>
                  </div>
                  <div class="row">
                    <%= f.button :submit, "Log in", class: "btn btn-lg btn-primary btn-block text-uppercase"  %>
                  </div>
              <% end %>

              <%= render "devise/shared/links" %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
